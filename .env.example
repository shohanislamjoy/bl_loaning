# Easy Loan - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Infura Project Configuration (get from https://infura.io/)
INFURA_PROJECT_ID=your_infura_project_id_here
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# Ethereum Network Configuration
ETHEREUM_NETWORK=sepolia
RPC_URL=https://sepolia.infura.io/v3/${INFURA_PROJECT_ID}
CHAIN_ID=11155111

# Smart Contract Configuration
CONTRACT_ADDRESS=0xYourDeployedContractAddress
CONTRACT_ABI_PATH=contracts/abi/CreditScoring.json

# =============================================================================
# WALLET CONFIGURATION (DEVELOPMENT ONLY)
# =============================================================================
# WARNING: Never use real private keys in development
# These are for testnet only

PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=0x9EBA0526580292dF4e1C50e19AEB3ec69e12E270

# =============================================================================
# API CONFIGURATION
# =============================================================================

# External API Endpoints
ETHERSCAN_API_KEY=your_etherscan_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# App Environment
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption Settings
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
API_RATE_LIMIT=100
BLOCKCHAIN_RATE_LIMIT=10

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and configure for production deployment

# ENVIRONMENT=production
# DEBUG_MODE=false
# LOG_LEVEL=error
# ENABLE_ANALYTICS=true
# ENABLE_CRASH_REPORTING=true

# Production Blockchain Settings
# ETHEREUM_NETWORK=mainnet
# RPC_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
# CHAIN_ID=1

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Network Settings
TEST_NETWORK=sepolia
TEST_RPC_URL=https://sepolia.infura.io/v3/${INFURA_PROJECT_ID}
TEST_CHAIN_ID=11155111

# Test Data
TEST_USER_ADDRESS=0x742d35Cc6634C0532925a3b8D0c6554Bb6e00002
TEST_CONTRACT_ADDRESS=0x0629904487d908D5C5fCe3B89C8234fcf4d78DAE

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Third-party Services
CREDIT_BUREAU_API_KEY=your_credit_bureau_api_key_here
KYC_SERVICE_API_KEY=your_kyc_service_api_key_here

# Social Login
GOOGLE_CLIENT_ID=your_google_client_id_here
FACEBOOK_APP_ID=your_facebook_app_id_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
BUILD_NUMBER=1.0.0
VERSION_CODE=1

# Platform Specific
ANDROID_PACKAGE_NAME=com.shohantech.easyloan
IOS_BUNDLE_ID=com.shohantech.easyloan

# =============================================================================
# NOTES & INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env in the root directory
# 2. Replace all placeholder values with your actual configuration
# 3. Never commit .env file to version control
# 4. Use different .env files for different environments
# 5. Keep sensitive information secure and rotate keys regularly

# For detailed setup instructions, see:
# - docs/BLOCKCHAIN_SETUP.md
# - docs/PROJECT_DOCUMENTATION.md
# - docs/SMART_CONTRACT_DEPLOYMENT.md

